{
    "dataRoles": [
        {
            "displayName": "Color by Attribute",
            "name": "roomdata",
            "kind": "Grouping"
        },
        {
            "displayName": "Color Hex-Value",
            "name": "roomcolorvalue",
            "kind": "Measure"
        }
    ],
    "objects": {
        "speckle": {
            "displayName": "3D",
            "properties": {
                "specklestreamurl": {
                    "displayName": "Speckle Stream URL",
                    "description": "URL of a Speckle object stream, should be like https://speckleserver/api/streams/STREAM_FINGERPRINT/objects",
                    "type": {
                        "text": true
                    }
                },
                "defaultRoomColor": {
                    "displayName": "Default Room Color",
                    "description": "The default fill color for rooms.",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "lineWeight": {
                    "displayName": "Line Weight",
                    "description": "The line weight of all lines.",
                    "type": {
                        "numeric": true
                    }
                },
                "camera": {
                    "displayName": "Camera",
                    "description": "The 3D camera perspective.",
                    "type": {
                        "enumeration": [
                            {
                                "displayName": "Perspective",
                                "value": "perspective"
                            },
                            {
                                "displayName": "Orthographic",
                                "value": "orthographic"
                            }
                        ]
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "categorical": {
                "categories": {
                    "for": {
                        "in": "roomdata"
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "roomcolorvalue"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
